    <!--All new style-->
    <!--All edit text-->
    <style name="EditText">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black_material</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/edt_bg_round</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--all linear layout-->
    <style name="linearLayout_home">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_register">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--all button-->
    <style name="Button">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--all text view-->
    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="textView_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textView_single_line" parent="textView">
        <item name="android:maxLines">1</item>
    </style>

    <style name="textView_home" parent="textView_single_line">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <!--all image view-->
    <style name="imageView_home">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

    <style name="image_register">
        <item name="android:layout_height">@dimen/_23sdp</item>
        <item name="android:layout_width">@dimen/_23sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
    </style>

    <!--all card view-->
    <style name="cardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--all lines-->
    <style name="line_register">
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/hint_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Animation for dialog box -->
    <!--<style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">-->
    <style name="DialogSlideAnim" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
</resources>
