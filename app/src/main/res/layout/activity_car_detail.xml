<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/slider_item" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.spectre.customView.CustomTextView
                            android:id="@+id/txt_car_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:paddingLeft="3dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:text="Honda City"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:edittextfont="Poppins-Medium.ttf"
                            app:edittextfontHint="Poppins-Medium.ttf" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="right|center">

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/price_vendor"
                                android:textColor="@color/colorSubText"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />


                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_car_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/txt_price"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="$20,000/day"
                                android:textColor="@color/colorRed"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Medium.ttf"
                                app:edittextfontHint="Poppins-Medium.ttf" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.spectre.customView.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/model_"
                                android:textColor="@color/colorSubText"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_car_model"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.spectre.customView.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/car_series"
                                android:textColor="@color/colorSubText"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_car_version"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_car_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.spectre.customView.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/car_type_"
                                android:textColor="@color/colorSubText"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_car_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_car_milleage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.spectre.customView.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/Mileage"
                                android:textColor="@color/colorSubText"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_car_mileage"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="10">

                            <com.spectre.customView.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/Mileage"
                                android:textColor="@color/colorSubText"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="7"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/rl_rent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/ll_from"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <com.spectre.customView.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/a_from"
                                    android:textColor="@color/colorSubText"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                                <com.spectre.customView.CustomTextView
                                    android:id="@+id/txt_from"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="6"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/na"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll_from"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <com.spectre.customView.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/a_to"
                                    android:textColor="@color/colorSubText"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                                <com.spectre.customView.CustomTextView
                                    android:id="@+id/txt_to"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="6"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/na"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_car_posted_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.spectre.customView.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/post_date"
                                android:textColor="@color/colorSubText"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_car_posted_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="6"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <com.spectre.customView.CustomTextView
                        android:id="@+id/vendor_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="@string/vendor_detail"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:edittextfont="Poppins-Medium.ttf"
                        app:edittextfontHint="Poppins-Medium.ttf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/vendor_detail"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_name_"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="50dp"
                                android:drawableLeft="@mipmap/user"
                                android:drawablePadding="15dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textColorLink="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_address_"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/pin"
                                android:drawablePadding="15dp"
                                android:maxLines="3"
                                android:paddingBottom="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="2dp"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textColorLink="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />


                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_number_"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoLink="phone"
                                android:drawableLeft="@mipmap/contact"
                                android:drawablePadding="15dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textColorLink="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />

                            <com.spectre.customView.CustomTextView
                                android:id="@+id/txt_email_"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoLink="email"
                                android:drawableLeft="@mipmap/email"
                                android:drawablePadding="15dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="@string/na"
                                android:textColor="@color/black"
                                android:textColorLink="@color/black"
                                android:textSize="12sp"
                                app:edittextfont="Poppins-Regular.ttf"
                                app:edittextfontHint="Poppins-Regular.ttf" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <com.spectre.customView.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/name_"
                                    android:textColor="@color/colorSubText"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                                <com.spectre.customView.CustomTextView
                                    android:id="@+id/txt_vendor_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="50dp"
                                    android:layout_weight="10"
                                    android:maxLines="2"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="@string/na"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <com.spectre.customView.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/address_"
                                    android:textColor="@color/colorSubText"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                                <com.spectre.customView.CustomTextView
                                    android:id="@+id/txt_adress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="10"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/na"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <com.spectre.customView.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/email_id"
                                    android:textColor="@color/colorSubText"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                                <com.spectre.customView.CustomTextView
                                    android:id="@+id/txt_email_id"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="10"
                                    android:autoLink="email"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/na"
                                    android:textColor="@color/black"
                                    android:textColorLink="@color/black"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <com.spectre.customView.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="4"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/contact"
                                    android:textColor="@color/colorSubText"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                                <com.spectre.customView.CustomTextView
                                    android:id="@+id/txt_contact"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="10"
                                    android:autoLink="phone"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:singleLine="true"
                                    android:text="@string/na"
                                    android:textColor="@color/black"
                                    android:textColorLink="@color/black"
                                    android:textSize="12sp"
                                    app:edittextfont="Poppins-Regular.ttf"
                                    app:edittextfontHint="Poppins-Regular.ttf" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="50dp"
