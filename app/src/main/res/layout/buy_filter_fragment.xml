<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                style="@style/cardView"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_5sdp"
                card_view:cardBackgroundColor="@color/colorPrimaryDark"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@mipmap/splashlogo" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView1"
                    style="@style/cardView"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="@dimen/_5sdp"
                    card_view:cardElevation="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:text="Search for Buy"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/llLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/input_layout_locatoin"
                                        android:layout_width="0dp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".9">

                                        <EditText
                                            android:id="@+id/edtLocation"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/setting_yellow"
                                            android:clickable="true"
                                            android:ellipsize="end"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:hint="Location"
                                            android:inputType="text"
                                            android:singleLine="true"
                                            android:text="Search.." />

                                    </android.support.design.widget.TextInputLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".1"
                                        android:background="@drawable/ripple"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/imgLocation"
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:background="@drawable/ic_location"
                                            android:backgroundTint="@color/setting_yellow"
                                            android:padding="@dimen/_3sdp"
                                            android:tint="@color/white" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_layout_brandname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/input_brand_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/setting_yellow"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:hint="Select Brand Name"
                                        android:inputType="text"
                                        android:singleLine="true"
                                        android:text="@string/any_type" />

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_layout_modle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <EditText
                                        android:id="@+id/input_model_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/setting_yellow"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:hint="Select Model Name"
                                        android:inputType="text"
                                        android:singleLine="true"
                                        android:text="@string/any_type" />

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_layout_trasactionTIme"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <EditText
                                        android:id="@+id/input_transactionType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/setting_yellow"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:hint="Select Transmission Type"
                                        android:inputType="text"
                                        android:singleLine="true"
                                        android:text="@string/any_type" />

                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/input_layout_fromYear"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_weight="4">

                                        <EditText
                                            android:id="@+id/input_fromYear"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/setting_yellow"
                                            android:clickable="true"
                                            android:ellipsize="end"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:hint="From Year"
                                            android:inputType="text"
                                            android:singleLine="true"
                                            android:text="@string/any_type" />

                                    </android.support.design.widget.TextInputLayout>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_weight="2"
                                        android:gravity="center"
                                        android:text="To"
                                        android:textColor="@color/black" />

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/input_layout_toYear"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_weight="4">

                                        <EditText
                                            android:id="@+id/input_toYear"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/setting_yellow"
                                            android:clickable="true"
                                            android:ellipsize="end"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:hint="To Year"
                                            android:inputType="text"
                                            android:singleLine="true"
                                            android:text="@string/any_type" />

                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_layout_sellertype"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <EditText
                                        android:id="@+id/input_SellerType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/setting_yellow"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:hint="Select Seller Type"
                                        android:inputType="text"
                                        android:singleLine="true"
                                        android:text="@string/any_type" />

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_layout_color"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <EditText
                                        android:id="@+id/input_color"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/setting_yellow"
                                        android:clickable="true"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:hint="Select Color"
                                        android:inputType="text"
                                        android:singleLine="true"
                                        android:text="@string/any_type" />

                                </android.support.design.widget.TextInputLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/textView"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:text="@string/price_"
                                        android:textColor="@color/black" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/txtMinRange"
                                                style="@style/textView"
                                                android:layout_weight="1"
                                                android:padding="@dimen/_5sdp"
                                                android:text="0"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_10sdp" />

                                            <TextView
                                                android:id="@+id/txtMaxRange"
                                                style="@style/textView"
                                                android:padding="@dimen/_5sdp"
                                                android:text="10000"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_10sdp" />
                                        </LinearLayout>

                                        <com.spectre.customView.RangeSeekBar
                                            android:id="@+id/rangPrice"
                                            android:backgroundTint="@color/setting_yellow"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_30sdp" />
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>

                            <!--  <View
                                  style="@style/line_register"
                                  android:layout_marginEnd="@dimen/_35sdp"
                                  android:layout_marginStart="@dimen/_15sdp"
                                  android:layout_marginTop="@dimen/_minus5sdp"
                                  android:background="@color/colorAccent" />-->

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btnSearch"
                    style="@style/Button"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="Search Car" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>