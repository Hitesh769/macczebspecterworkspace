<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="101dp"
            android:layout_height="71dp"
            android:background="@drawable/semi_transparent_box">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_gravity="top"
                android:scaleType="center"
                android:src="@drawable/ic_launcher_web" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rl_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.spectre.customView.CustomTextView
                    android:id="@+id/txt_car_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="AED 20000"
                    android:textColor="@color/colorRed"
                    android:textSize="12sp"
                    app:edittextfont="Poppins-Medium.ttf"
                    app:edittextfontHint="Poppins-Medium.ttf" />

                <com.spectre.customView.CustomTextView
                    android:id="@+id/txt_car_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="12 Jan 2018"
                    android:textColor="@color/colorSubText"
                    android:textSize="8sp"
                    app:edittextfont="Poppins-Regular.ttf"
                    app:edittextfontHint="Poppins-Regular.ttf" />

            </LinearLayout>

            <com.spectre.customView.CustomTextView
                android:id="@+id/txt_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlue"
                android:textSize="12sp"
                app:edittextfont="Poppins-Medium.ttf"
                app:edittextfontHint="Poppins-Medium.ttf" />

            <com.spectre.customView.CustomTextView
                android:id="@+id/txt_car_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="Honda City"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:edittextfont="Poppins-Regular.ttf"
                app:edittextfontHint="Poppins-Regular.ttf" />

            <com.spectre.customView.CustomTextView
                android:id="@+id/txt_car_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="Model: i- DTEC SV"
                android:textColor="@color/colorSubText"
                android:textSize="12sp"
                app:edittextfont="Poppins-Regular.ttf"
                app:edittextfontHint="Poppins-Regular.ttf" />

            <com.spectre.customView.CustomRayMaterialTextView
                android:id="@+id/btn_view_detail"
                style="@style/splashRipple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="@drawable/yellow_rounded_2dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Details"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:edittextfont="Poppins-Regular.ttf" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>