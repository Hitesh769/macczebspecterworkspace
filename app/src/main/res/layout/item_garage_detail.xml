<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:background="@drawable/semi_transparent_box">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_web" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_product"
            android:orientation="vertical">

            <com.spectre.customView.CustomTextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="Auto Service Center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:edittextfont="Poppins-Regular.ttf"
                app:edittextfontHint="Poppins-Regular.ttf" />

            <com.spectre.customView.CustomTextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxLines="2"
                android:text="Al Barsha, Dubai P.O. Box: 2360, Dubai"
                android:textColor="@color/colorSubText"
                android:textSize="12sp"
                app:edittextfont="Poppins-Regular.ttf"
                app:edittextfontHint="Poppins-Regular.ttf" />

            <com.spectre.customView.CustomTextView
                android:id="@+id/txt_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="99778845"
                android:autoLink="phone"
                android:textColorLink="@color/colorBlue"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/garage_call"
                android:textColor="@color/colorBlue"
                android:textSize="12sp"
                app:edittextfont="Poppins-Medium.ttf"
                app:edittextfontHint="Poppins-Medium.ttf" />


            <com.spectre.customView.CustomRayMaterialTextView
                android:id="@+id/btn_save_changes"
                style="@style/splashRipple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/yellow_rounded_2dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="2dp"
                android:text="Details"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                app:edittextfont="Poppins-Regular.ttf" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>